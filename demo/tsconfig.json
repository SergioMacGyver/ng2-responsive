{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "public/compiled",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "types": [
      "es6-shim",
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}